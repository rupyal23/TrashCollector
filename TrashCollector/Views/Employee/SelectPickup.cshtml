@model TrashCollector.Models.EmployeeViewModel
@{
    ViewBag.Title = "SelectPickup";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<h2>SelectPickup</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>@Model.Employee.FirstName</h4>
        <div class="form-group">
            Select Day
            @Html.DropDownListFor(m => m.Day, new SelectList(Model.Day, "text"), "Select", new { @class = "form-control" })
        </div>
    </div>
    @Html.HiddenFor(m => m.Employee.Id)
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("View All on Map", "ViewAll", new { text = Model.Day })
}