@model IEnumerable<TrashCollector.Models.Pickup>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<h2>Index</h2>
<h3>Trash Pickups</h3>


<table class="table">
    <tr>
        <th>
            Pick Up
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PickupDate)
            @Html.DisplayFor(modelItem => item.PickupDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Confirm", "ConfirmPickup", new { id = item.Id }, new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Select Pickups", "SelectPickup", "", new { @class = "btn btn-primary" })
    @Html.ActionLink("Change Work Area", "Edit", "", new { @class = "btn btn-primary" })
    @*@Html.ActionLink("View All on Map", "ViewAll", new {text = Model.Select(m=>m.PickupDay).Single()}, new { @class = "btn btn-primary" })*@

</p>