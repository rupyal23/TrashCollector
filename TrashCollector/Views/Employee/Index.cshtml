@model IEnumerable<TrashCollector.Models.Pickup>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<h2>Index</h2>
<h3>Trash Pickups</h3>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PickupDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SecondPickupDate)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PickupDate)
            @Html.DisplayFor(modelItem => item.PickupDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SecondPickupDate)
            @Html.DisplayFor(modelItem => item.SecondPickupDay)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id })
            @Html.ActionLink("Confirm", "ConfirmPickup", new { id = item.Id })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Select Pickups", "SelectPickup", new { @class = "btn btn-primary" })
</p>