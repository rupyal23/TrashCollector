        <dd>
            @Html.DisplayFor(model => model.Address.Zip)
        </dd>
    </dl>
</div>
<div class="col-md-4">
    <iframe width="600"
            height="450"
            frameborder="0" style="border:0"
            src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAEYl47x83WSKEMsUZGbhmhJVfgGmlC3F8
    &q=@Model.Address.StreetNumber+@Model.Address.StreetName+@Model.Address.City+@Model.Address.State+@Model.Address.Zip" allowfullscreen></iframe>
</div>
<p>
    @Html.ActionLink("Confirm", "ConfirmPickup", new {  id = Model.Pickup.Id }, new { @class = "btn btn-primary" }) 
