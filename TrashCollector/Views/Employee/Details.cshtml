@model TrashCollector.Models.CustomerAddressViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<h2>Details</h2>

<div class="col-md-8">
    <h4>CustomerAddressViewModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Customer.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Customer.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address.StreetNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Address.StreetNumber)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Address.StreetName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address.StreetName)
        </dd>
        <dt>
